[MASTER]
# PAths to not ignore (negative lookahead)
ignore-paths=^(?!.*(?:[\\/]{1}bdd[\\/]steps[\\/]|[\\/]src[\\/]|[\\/]tests[\\/])).*$
# Extra regex patterns (paths) to exclude
ignore-patterns=
    \./__init__\.py,
    tests/fixtures/.*,
    .*_generated\.py,
    .*__init__\.py,
    setup.*py,
    scripts/ci.py
py-version=3.11
jobs=0
load-plugins=pylint.extensions.mccabe,pylint.extensions.docparams

[MESSAGES CONTROL]
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods
enable=useless-suppression

[FORMAT]
max-line-length=127
indent-string='    '

[BASIC]
good-names=i,j,k,ex,_,db,fp
docstring-min-length=5

[DESIGN]
max-args=8
max-attributes=15
max-locals=25
max-branches=15
max-returns=6
max-statements=60
max-public-methods=25

[SIMILARITIES]
min-similarity-lines=6
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[LOGGING]
logging-format-style=new

[IMPORTS]
known-third-party=board

[VARIABLES]
dummy-variables-rgx=^(_|unused_.*)$

#[EXCEPTIONS]
#overgeneral-exceptions=Exception

[REFACTORING]
max-nested-blocks=5